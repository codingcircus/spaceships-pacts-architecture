{
  "consumer": {
    "name": "spaceship-creator-app"
  },
  "provider": {
    "name": "spaceships-service"
  },
  "interactions": [
    {
      "description": "a request to get all spaceships",
      "providerState": "there is a spaceship with id 1 in the database",
      "request": {
        "method": "GET",
        "path": "/spaceships",
        "headers": {
          "Content-Type": "application/json"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        },
        "body": [
          {
            "id": 1
          }
        ],
        "matchingRules": {
          "$.body": {
            "min": 1
          },
          "$.body[*].*": {
            "match": "type"
          },
          "$.body[*].id": {
            "match": "type"
          }
        }
      }
    },
    {
      "description": "a request to add a new spaceship",
      "request": {
        "method": "POST",
        "path": "/spaceships",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "name": "A Spaceship",
          "description": "to infinity and beyond",
          "size": "small"
        },
        "matchingRules": {
          "$.body.name": {
            "match": "type"
          },
          "$.body.description": {
            "match": "type"
          },
          "$.body.size": {
            "match": "regex",
            "regex": "small|medium|large"
          }
        }
      },
      "response": {
        "status": 201,
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        },
        "body": {
          "id": 1,
          "name": "A Spaceship",
          "description": "A Spaceship",
          "size": "small"
        },
        "matchingRules": {
          "$.body.id": {
            "match": "type"
          },
          "$.body.name": {
            "match": "type"
          },
          "$.body.description": {
            "match": "type"
          },
          "$.body.size": {
            "match": "regex",
            "regex": "small|medium|large"
          }
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}